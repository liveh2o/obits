<%= form_for([:admin, @obituary]) do |f| %>
  <%= f.error_messages %>
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :middle_name %><br />
    <%= f.text_field :middle_name %>
  </div>
  <div class="field">
    <%= f.label :other_name %><br />
    <%= f.text_field :other_name %>
  </div>
  <div class="field">
    <%= f.label :printed_on %><br />
    <%= f.text_field :printed_on, :class => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :page %><br />
    <%= f.text_field :page %>
  </div>
  <div class="field">
    <%= f.label :born_on %><br />
    <%= f.text_field :born_on, :class => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :died_on %><br />
    <%= f.text_field :died_on, :class => 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
  </div>
  <div class="submit">
    <%= f.submit :class => 'large awesome gray' %>
  </div>
<% end %>
