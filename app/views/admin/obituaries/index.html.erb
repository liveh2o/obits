<div class="actions">
    <%= button_to "Add New Obituary", new_admin_obituary_path, :class => 'large awesome left' %>
    <%= form_tag("/admin/obituaries",:method => :get, :class => 'right') do %>
        <%= text_field_tag :search, params[:search] %> <%= submit_tag 'Search', :class => 'large awesome gray' %>
    <% end %>
</div>
<ul>
<% @obituaries.compact.each do |obituary| %>
    <li class="<%= cycle('odd','even') %>">
        <strong><%= obituary.fullname %></strong><br/>
        <div class="column results-left">
            <strong>Born:</strong> <%= obituary.born_on %><br />
            <strong>Deceased:</strong> <%= obituary.died_on %><br />
            <strong>Obituary:</strong> <%= obituary.printed_on %>, <%= obituary.page %><br />
        </div>
        <div class="column results-right">
            <em><%= simple_format(obituary.notes.strip) %></em>
        </div>
        <p>
            <%= link_to "Edit", edit_admin_obituary_path(obituary) %>
            <%= link_to image_tag('trash.gif'), [:admin, obituary], :confirm => 'Are you sure you want to delete this obituary?', :method => :delete %>
        </p>
    </li>
<% end %>
</ul>
<%= paginate(@obituaries) %>
